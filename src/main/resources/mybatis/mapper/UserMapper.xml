<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.czb.article.dao.UserMapper" >
  <resultMap id="BaseResultMap" type="com.czb.article.bean.po.User" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="birthday" property="birthday" jdbcType="DATE" />
    <result column="name1" property="name1" jdbcType="VARCHAR" />
    <result column="xx" property="xx" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="user">
    id,name
  </sql>

  <select id="getUserByNumSize" resultMap="BaseResultMap">
    SELECT <include refid="user" /> FROM user
  </select>
</mapper>