<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.czb.article.dao.UserMapper">
  <resultMap id="BaseResultMap" type="com.czb.article.bean.po.User">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="birthday" jdbcType="DATE" property="birthday" />
    <result column="name1" jdbcType="VARCHAR" property="name1" />
    <result column="xx" jdbcType="VARCHAR" property="xx" />
  </resultMap>
  
  <sql id="user">
    id,name
  </sql>

  <select id="getUserByNumSize" resultMap="BaseResultMap">
    SELECT <include refid="user" /> FROM user
  </select>
</mapper>